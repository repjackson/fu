template(name='courses')
    .ui.container
        .ui.stackable.grid
            .twelve.wide.column
                h1.ui.horizontal.divider.header courses
                // .ui.cards
                .ui.relaxed.divided.items
                    each courses
                        +course_item
            .four.wide.column
                +cloud filter='course'
                if currentUser
                    +add filter='course'


            
template(name='course_item')
    .item
        a.image(href="/course/view/#{_id}")
            img.ui.rounded.image(src="{{c.url image_id  width=175 height=175 crop='fill' gravity='face' }}")
        .content
            a.header(href="/course/view/#{_id}") #{title}
            .meta
                | Published #{publish_when}
            .description
                p #{snippet}
                a(href="/course/view/#{_id}") 
                    |View More
                    i.arrow.right.icon
            .extra
                i.tags.icon
                each tags
                    .ui.compact.tiny.button.course_tag(class=tag_class) #{this}
            if isInRole 'admin'
                .extra
                    i.red.configure.large.icon
                    if published
                        .ui.green.label Published
                    else
                        .ui.red.label Unpublished                        
                    if featured
                        .ui.green.label Featured
                    else
                        .ui.red.label Unfeatured


template(name='edit_course')
    with course
        .ui.container
            .ui.center.aligned.header Edit Course
            .ui.form
                +title
                +subtitle
                +tags
                +published
                .ui.center.aligned.basic.segment
                    if tags
                        a.ui.huge.green.button(href="/course/view/#{_id}") Save
                +delete type='course'


template(name='course_page')
    with course
        .ui.container
            h1.ui.header #{title}
            h3.ui.header #{subtitle}
            .ui.stackable.grid
                .twelve.wide.column
                    .ui.cards
                        each sections
                            .ui.card
                                .content
                                    .header #{title}
                                    
                        
                .four.wide.column
                    .ui.horizontal.divider.header Tags
                    each tags
                        .ui.basic.label #{this}
                    +user_card
                    if can_edit
                        .ui.horizontal.divider.header
                            i.large.red.configure.icon
                            |Admin
                        a(href="/course/edit/#{_id}").ui.basic.fluid.button
                            i.pencil.icon
                            |Edit
                        if published
                            .ui.green.label Published
                        else
                            .ui.red.label Unpublished                        
                        if featured
                            .ui.green.label Featured
                        else
                            .ui.red.label Unfeatured
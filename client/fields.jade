template(name='title')
    .field
        label title
        input#title(type='text' value=title)

template(name='subtitle')
    .field
        label subtitle
        input#subtitle(type='text' value=subtitle)


template(name='tags')
    .field
        label tags
        each tags
            .ui.basic.button.doc_tag
                i.minus.icon
                |#{this}
        .ui.left.icon.four.wide.input
            i.add.icon
            input#add_tag(type='text' placeholder='add...' maxlength='50')


template(name='price')
    .field
        label price in $
        input#price(type='number' min='0' value=price)

template(name='link')
    .field
        label link (include http://)
        .ui.left.icon.input
            i.linkify.icon
            input#link(type='text' value=url)


template(name='page_name')
    .field
        label page name
        .ui.input
            input#name(type='text' value=name)


template(name='type')
    .field
        label type
        .ui.left.icon.input
            i.red.configure.icon
            input#type(type='text' value=type)

template(name='location')
    .field
        label location
        .ui.left.icon.input
            i.compass.icon
            input#location(type='text' value=location)

